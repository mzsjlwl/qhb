<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y50"
        android:layout_margin="8dp"
        android:paddingTop="@dimen/y1"
        android:paddingBottom="@dimen/y1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="@dimen/y48"
            android:layout_height="@dimen/y48"
            android:padding="@dimen/y3">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/iv_product"
                android:src="@mipmap/test_icon"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/x5">
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/tx_pname"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品名称"
                    android:textSize="@dimen/x16"
                    android:textColor="#000000"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/y5"
                android:layout_height="0dp"
                >

                    <Button
                        android:layout_height="@dimen/y20"
                        android:layout_width="@dimen/x20"
                        android:background="@drawable/btn_bg_border"
                        android:id="@+id/btn_add"
                        android:text="@string/tx_add"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="@dimen/x16"
                        />
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="@dimen/x5"
                        android:layout_marginRight="@dimen/x5"
                        android:layout_toRightOf="@+id/btn_add"
                        android:id="@+id/tv_num"
                        android:text="1"
                        android:textSize="@dimen/x18"
                        />
                    <Button
                        android:layout_height="@dimen/y20"
                        android:layout_width="@dimen/x20"
                        android:background="@drawable/btn_bg_border"
                        android:layout_toRightOf="@+id/tv_num"
                        android:text="@string/tx_subtract"
                        android:textColor="#ffffff"

                        android:textStyle="bold"
                        android:textSize="@dimen/x16"
                        android:id="@+id/btn_sub"
                        />

                <TextView
                    android:id="@+id/tx_price"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="99.9￥"
                    android:textStyle="bold"
                    android:textSize="@dimen/x16"
                    android:textColor="#88FA0206"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>