<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/chat_send_createDate"
        style="@style/chat_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2012-09-01 18:30:21" />


            <LinearLayout
                android:id="@+id/ly_chat_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginLeft="@dimen/x50"
                android:orientation="horizontal" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x50"
                    android:gravity="right"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/chat_send_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/x12"
                        android:text="fs"
                        android:textColor="#444"
                        android:textSize="@dimen/x12" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ProgressBar
                            android:id="@+id/id_progressBar"
                            android:layout_width="@dimen/x16"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/chat_send_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:background="@drawable/balloon_r2"
                            android:gravity="center_vertical"
                            android:lineSpacingExtra="@dimen/x2"
                            android:paddingLeft="@dimen/x15"
                            android:paddingRight="@dimen/x20"
                            android:paddingTop="@dimen/y4"
                            android:paddingBottom="@dimen/y4"
                            android:text="fdsdsa"

                            android:textColor="#000"
                            android:textSize="@dimen/x15" />
                    </LinearLayout>
                </LinearLayout>


                <ImageView
                    android:id="@+id/chat_send_icon"
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/x45"
                    android:layout_marginRight="@dimen/x5"
                    android:src="@mipmap/test_icon" />
            </LinearLayout>


</LinearLayout>