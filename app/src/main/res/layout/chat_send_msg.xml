<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/chat_send_createDate"
        style="@style/chat_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2012-09-01 18:30:21" />


            <LinearLayout
                android:id="@+id/ly_chat_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginLeft="50dp"
                android:orientation="horizontal" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:gravity="right"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/chat_send_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:text=""
                        android:textColor="#444"
                        android:textSize="12dp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ProgressBar
                            android:id="@+id/id_progressBar"
                            android:layout_width="20dp"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/chat_send_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:background="@drawable/balloon_r2"
                            android:gravity="center_vertical"
                            android:lineSpacingExtra="2dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="15dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:text="fdsdsa"

                            android:textColor="#000"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>


                <ImageView
                    android:id="@+id/chat_send_icon"
                    android:layout_width="49dp"
                    android:layout_height="49dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/test_icon" />
            </LinearLayout>


</LinearLayout>