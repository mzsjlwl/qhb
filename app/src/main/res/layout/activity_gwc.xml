<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeff4">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="#000000">
        <ImageButton
            android:id="@+id/ib_back"
            android:layout_height="wrap_content"
            android:layout_width="25dp"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:layout_margin="12dp"
            android:background="@mipmap/zf_back_btn"
            />
        <TextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/ib_back"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical|left"
            android:text="@string/tx_gwcjs"
            android:textSize="20dp"
            android:textColor="#ffffff"
            />
    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_address"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:background="#ffffff"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_receName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tx_receName"
                android:textSize="18dp"
                android:layout_marginLeft="20dp"

                />
            <TextView
                android:id="@+id/tv_recePhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tx_recePhone"
                android:textSize="18dp"
                android:layout_marginLeft="20dp"

                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:gravity="right"
            android:text=">"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tv_receAddr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tx_address"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="#ffffff">


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
       >

    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="@string/tx_totalPrice"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="80dp"
            android:text="ï¿¥99.9"
            android:textSize="18dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_liuyan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingLeft="30dp"
        android:text="@string/tx_liuyan"
        android:textSize="18dp"
        android:textStyle="bold"
        android:background="#ffffff"/>
    <EditText
        android:id="@+id/et_liuyan"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/et_bg_border"/>
    </LinearLayout>
</LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        >
        <Button
            android:layout_height="35dp"
            android:layout_width="50dp"
            android:background="@drawable/btn_js_border"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:text="@string/tx_js"
            android:textColor="#ffffff"
            android:paddingTop="2dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:id="@+id/btn_sub"

            />
    </RelativeLayout>
</RelativeLayout>