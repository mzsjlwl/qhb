<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tab.com.handsome.handsome" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.handsome.qhb.application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.handsome.qhb.ui.activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.handsome.qhb.ui.activity.LoginActivity"
            android:label="@string/title_activity_login" >

        </activity>
        <activity
            android:name="com.handsome.qhb.ui.activity.ChatActivity"
            android:label="@string/title_activity_chat" >
        </activity>
    </application>

</manifest>
